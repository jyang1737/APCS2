public class Roman {
    private int _n;
    private String _numeral;
    
    //constructor
    public Roman(int n) {
	if (n <= 0 || n > 4000)
	    throw new ArithmeticException();
       	_n = n;
	_numeral = toRoman(n);
    }
    
    public String toString() {
	return _numeral;
    }

    public static String toRoman(int n) {
	String x = "";
	while (n > 0) 
	    x += "I";
	return x;
	    
    }

    public static void main(String[] args) {
	System.out.println(toRoman(3));
    }
}
